<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B6B3A"
    tools:context=".LeaderboardActivity">

    <!-- Status bar mock -->

    <!-- Back arrow -->

    <!-- Settings icon -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LEADERBOARD Title -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sun (Lottie) -->

    <TextView
        android:id="@+id/leaderboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="LEADERBOARD"
        android:textColor="#231B0B"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <!-- Clouds (Lottie) -->

    <!-- Podium profiles -->
    <!-- Left profile -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSun"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboardTitle"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/sun" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieClouds"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:scaleX="10"
        android:scaleY="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lottieSun"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/clouds" />

    <LinearLayout
        android:id="@+id/leftProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lottieClouds"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp">

        <ImageView
            android:id="@+id/profileLeft"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatar_devi" />
        <TextView
            android:id="@+id/nameLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devi R."
            android:textColor="#444"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/luckiest_guy" />
        <TextView
            android:id="@+id/pointsLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,840 pts"
            android:textColor="#7A6B4A"
            android:textSize="16sp"
            android:fontFamily="@font/luckiest_guy" />
        <View
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:background="#F6F6FF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#F6F6FF"
            android:backgroundTintMode="src_in" />
    </LinearLayout>

    <!-- Center profile (winner) -->
    <LinearLayout
        android:id="@+id/centerProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lottieClouds"
        app:layout_constraintStart_toEndOf="@id/leftProfile"
        app:layout_constraintEnd_toStartOf="@id/rightProfile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed">
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/profileCenter"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_mita" />
            <ImageView
                android:id="@+id/crown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_crown"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="-18dp" />
        </FrameLayout>
        <TextView
            android:id="@+id/nameCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mita S."
            android:textColor="#444"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/luckiest_guy" />
        <TextView
            android:id="@+id/pointsCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,120 pts"
            android:textColor="#7A6B4A"
            android:textSize="18sp"
            android:fontFamily="@font/luckiest_guy" />
        <View
            android:layout_width="64dp"
            android:layout_height="120dp"
            android:background="#FFE066"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFE066"
            android:backgroundTintMode="src_in" />
    </LinearLayout>

    <!-- Right profile -->
    <LinearLayout
        android:id="@+id/rightProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lottieClouds"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/profileRight"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder"
            app:srcCompat="@drawable/avatar_rohan" />
        <TextView
            android:id="@+id/nameRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohan W."
            android:textColor="#444"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/luckiest_guy" />
        <TextView
            android:id="@+id/pointsRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,560 pts"
            android:textColor="#7A6B4A"
            android:textSize="14sp"
            android:fontFamily="@font/luckiest_guy" />
        <View
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="#FFE0C6"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFE0C6"
            android:backgroundTintMode="src_in" />
    </LinearLayout>

    <!-- Leaderboard list card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leaderboardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/centerProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderboardRecycler"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Mascot Dino Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieMascotDino"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="-24dp"
        android:layout_marginBottom="-16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mountainBg"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mascot_dino" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mountainBg"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleX="2"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mountains" />

</androidx.constraintlayout.widget.ConstraintLayout> 