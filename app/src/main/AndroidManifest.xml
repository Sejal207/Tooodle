<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mad_toodle"
        tools:targetApi="31">

        <activity android:name="com.example.mad_toodle.GoogleSignInActivity"/>
        <activity android:name="com.example.mad_toodle.ContinueActivity"/>
        <activity android:name="com.example.mad_toodle.LoginActivity"/>
        <activity android:name="com.example.mad_toodle.HomeActivity"/>
        <activity android:name="com.example.mad_toodle.GettingStartedActivity"/>

        <activity
            android:name="com.example.mad_toodle.MainActivity"
            android:exported="false" />

        <activity
            android:name="com.example.mad_toodle.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Mad_toodle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>