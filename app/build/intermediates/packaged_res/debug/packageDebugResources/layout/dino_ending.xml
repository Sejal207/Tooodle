<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">

    <LinearLayout
        android:id="@+id/level_cleared_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#F6D54D"
        android:backgroundTint="#F6D54D"
        android:backgroundTintMode="src_in"
        android:clipToOutline="true"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/woohoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="WOOHOOOO!!"
            android:textColor="#000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cleared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="YOU HAVE CLEARED"
            android:textColor="#3F703B"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="LEVEL "
            android:textColor="#3F703B"
            android:textSize="32sp"
            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/coin"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="coins.json"
            app:lottie_loop="true"
            tools:ignore="MissingClass" />

        <Button
            android:id="@+id/next_level"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#3F703B"
            android:elevation="4dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="NEXT LEVEL"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_menu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#3F703B"
            android:elevation="4dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="GO BACK TO MAIN MENU"
            android:textColor="#fff"
            android:textStyle="bold" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dino"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="dinos.json"
            app:lottie_loop="true"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/dino_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="MR. DINO IS HAPPY"
            android:textColor="#000"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>