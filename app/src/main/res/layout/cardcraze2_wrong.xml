<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/background_gradient"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/header_box"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/box_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="Card Craze"
        android:textAlignment="center"
        android:textColor="#F1C40F"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="match the right picture and unlock the secrets of the jungle! 🌿🦁🌳"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/header_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sleeping_panda"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="37dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/music_icon"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/luckiest_guy"
        android:text="FISH"
        android:textColor="#F4EEEE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imageView5"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintStart_toEndOf="@id/imageView5"
        android:layout_marginStart="8dp" />

    <View
        android:id="@+id/view"
        android:layout_width="161dp"
        android:layout_height="182dp"
        android:background="@drawable/card_craze_box"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="161dp"
        android:layout_height="182dp"
        android:background="@drawable/card_craze_box"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/view"
        android:layout_marginStart="28dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="161dp"
        android:layout_height="182dp"
        android:background="@drawable/card_craze_box"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="161dp"
        android:layout_height="182dp"
        android:background="@drawable/card_craze_box"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="140dp"
        android:layout_height="146dp"
        app:srcCompat="@drawable/fish"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="146dp"
        android:layout_height="151dp"
        app:srcCompat="@drawable/dolphin"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="168dp"
        android:layout_height="174dp"
        app:srcCompat="@drawable/octopus"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="173dp"
        android:layout_height="183dp"
        app:srcCompat="@drawable/turtle"
        app:layout_constraintTop_toTopOf="@id/view4"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4" />

    <LinearLayout
        android:id="@+id/bottom_overlay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFF176"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/amazing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Wrong Answer!"
            android:textColor="#2E7D32"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_margin="8dp"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#3F703B"
            android:elevation="4dp"
            android:gravity="center"
            android:outlineProvider="background"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:text="CONTINUE"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>